{
  "name": "most-test",
  "version": "1.0.0",
  "private": true,
  "author": "B.E. Henriksen <e@jiku.ca>",
  "bugs": "https://github.com/jiku/most-test/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm run deps",
        "npm test",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "files": [
    "index.js",
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/jiku/most-test#readme",
  "keywords": [],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jiku/most-test.git"
  },
  "scripts": {
    "start": "node index.js",
    "ban": "ban",
    "deps": "deps-ok",
    "format": "standard-format -w index.js src/*.js",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose index.js src/*.js",
    "pretest": "npm run format && npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.8.4",
    "deps-ok": "1.2.0",
    "git-issues": "1.3.1",
    "license-checker": "8.0.3",
    "mocha": "3.2.0",
    "most": "1.1.0",
    "nsp": "2.6.2",
    "pre-git": "3.11.1",
    "standard": "8.6.0",
    "standard-format": "2.2.4"
  }
}
